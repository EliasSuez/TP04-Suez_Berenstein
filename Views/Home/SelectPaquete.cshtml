<div>
    <h1>Destinos:</h1>
    @for (int i = 0; i < ViewBag.ListaDestinos.Count; i++)
    {
        <option value="@i">@ViewBag.ListaDestinos[i]</option>
    }
        <label for="quantity">Opcion (entre 1 y 10):</label>
        <input type="number" id="Destinos" name="Destinos" min="1" max="10" required=true>
</div>

<div>
    <h1>Hoteles:</h1>
    @for (int i = 1; i <= ViewBag.ListaHoteles.Count; i++)
    {
        <img src="~/img/@ViewBag.ListaHoteles[i-1]">
        <p>Opcion @i</p>
    }
        <label for="quantity">Opcion (entre 1 y 10):</label>
        <input type="number" id="Hotel" name="Hotel" min="1" max="10" required=true>  
</div>
